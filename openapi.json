{
    "openapi": "3.1.0",
    "info": {
        "title": "Azure DevOps Boards WIQL API",
        "description": "API para consultar Azure DevOps Boards usando WIQL.",
        "contact": {
            "name": "Thiago Salles",
            "email": "thiagosalles@microsoft.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "TO_BE_DEFINED",
            "description": "Microserviço para interação com Azure DevOps Boards usando WIQL."
        }
    ],
    "paths": {
        "/v1/wiql": {
            "post": {
                "tags": [
                    "Azure Boards WIQL"
                ],
                "summary": "Executa uma consulta WIQL",
                "description": "Executa uma consulta WIQL no Azure DevOps Boards e retorna os itens de trabalho correspondentes.",
                "operationId": "WIQLQuery",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/WIQLRequestBody"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Response"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "HTTPValidationError": {
                "properties": {
                    "detail": {
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        },
                        "type": "array",
                        "title": "Detail"
                    }
                },
                "type": "object",
                "title": "HTTPValidationError"
            },
            "Response": {
                "properties": {
                    "work_items": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array",
                        "title": "Work Items",
                        "description": "List of work items returned by the WIQL query"
                    }
                },
                "type": "object",
                "required": [
                    "work_items"
                ],
                "title": "Response",
                "description": "Response model for the WIQL query endpoint."
            },
            "ValidationError": {
                "properties": {
                    "loc": {
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "integer"
                                }
                            ]
                        },
                        "type": "array",
                        "title": "Location"
                    },
                    "msg": {
                        "type": "string",
                        "title": "Message"
                    },
                    "type": {
                        "type": "string",
                        "title": "Error Type"
                    }
                },
                "type": "object",
                "required": [
                    "loc",
                    "msg",
                    "type"
                ],
                "title": "ValidationError"
            },
            "WIQLQueryParams": {
                "properties": {
                    "days_back": {
                        "type": "integer",
                        "title": "Days Back",
                        "description": "Number of days back from today",
                        "default": 60
                    },
                    "excluded_states": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array",
                        "title": "Excluded States",
                        "description": "List of states to exclude from the query. If empty, defaults to common closed states.",
                        "examples": [
                            [
                                "Completed",
                                "Canceled",
                                "Done",
                                "Closed",
                                "Resolved"
                            ]
                        ]
                    },
                    "area_paths": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array",
                        "title": "Area Paths",
                        "description": "List of area paths to filter by. If empty, no area path filter is applied.",
                        "examples": [
                            [
                                "Elo\\Meios de Pagamento e Anti Fraude\\Meios de Pagamento\\Credenciais de Pagamentos",
                                "Elo\\Meios de Pagamento e Anti Fraude\\Anti-Fraude\\Compra Online"
                            ]
                        ]
                    },
                    "value_filters": {
                        "additionalProperties": {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        },
                        "type": "object",
                        "title": "Value Filters",
                        "description": "Value based filters for the WIQL query. Format: {'field_name': ['values']}. Checks if work_item[field_name] is in values list.",
                        "examples": [
                            {
                                "System.State": [
                                    "Active",
                                    "New"
                                ]
                            }
                        ]
                    },
                    "keyword_filters": {
                        "additionalProperties": {
                            "type": "string"
                        },
                        "type": "object",
                        "title": "Keyword Filters",
                        "description": "Keyword based filters for the WIQL query. Format: {'field_name': 'keyword'}. Checks if work_item[field_name] contains keyword.",
                        "examples": [
                            {
                                "System.Description": "Lyra",
                                "System.Title": "fraude"
                            }
                        ]
                    }
                },
                "type": "object",
                "title": "WIQLQueryParams",
                "description": "Parameters for the WIQL query."
            },
            "WIQLRequestBody": {
                "properties": {
                    "pat": {
                        "type": "string",
                        "title": "Pat",
                        "description": "Personal Access Token for Azure DevOps"
                    },
                    "top": {
                        "type": "integer",
                        "title": "Top",
                        "description": "Max number of work items to return",
                        "default": 50
                    },
                    "parameters": {
                        "$ref": "#/components/schemas/WIQLQueryParams"
                    }
                },
                "type": "object",
                "required": [
                    "pat"
                ],
                "title": "WIQLRequestBody",
                "description": "Request body for the WIQL query endpoint."
            }
        }
    },
    "tags": [
        {
            "name": "Azure Boards WIQL",
            "description": "Endpoints para consultar Azure DevOps Boards usando WIQL."
        }
    ]
}